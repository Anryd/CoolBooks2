@model CoolBooks2.Models.Book

@{
    ViewBag.Title = "DetailsImage";
}

<h2>DetailsImage</h2>

<div>
    <h4>Book</h4>
    <hr />
    <div class="row">
        <div class=" col-md-4">
            <img src="@Url.Content(Model.ImagePath)" alt="Image" style="height:400px;width:300px;" />
        </div>
        <div class=" col-md-8">
            <dl>
                <dd>
                    <h3>
                        @Html.DisplayFor(model => model.Title)
                    </h3>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt>
                    Genre
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Genre.Name)
                </dd>
                <dt>Författare</dt>
                <dd>
                    @Html.DisplayFor(model => model.Author.FirstName)
                    @Html.DisplayFor(model => model.Author.LastName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Created)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Created)
                </dd>
            </dl>
            <h3>Reviews</h3>
            <dl>
                @foreach (var item in Model.Reviews)
                {
                    <dt>
                        @Html.DisplayFor(m => item.AspNetUser.UserName)
                        @Html.DisplayFor(m => item.Created)
                    </dt>

                    <dd>@Html.DisplayFor(m => item.Text)</dd>

                }
            </dl>

            Inloggad user...
            @Html.TextAreaFor(m => Model.UserId)
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
